<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/rectangle_dialog"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_afd_decline_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Â¿Desea declinar amistad?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:id="@+id/ll_afd_center_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/btn_afd_decline_friend_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="Si" />

        <Button
            android:id="@+id/btn_afd_decline_friend_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@color/colorAccent"
            android:text="No" />

    </LinearLayout>

</LinearLayout>